@model GuestResponse


@{
    ViewData["Title"] = "Thankyou";
}

<h1>Thank You @Model.Name, for registering </h1>

<p>
    @if (Model.WillAttend == null)
    {

        @:Thank you for you answer. when you decide if you can come to the party, give me a call.

    }
    else if (Model.WillAttend == true)
    {
        @:Thank you for your answer. We will contact you soon with the details of the party.
    }
    else //(Model.WillAttend == false)
    {
        @:Sorry o hear that you can't make it, but thanks for letting us know.
    }

</p>